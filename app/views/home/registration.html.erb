<div id="registration_interface">
  <%= form_tag :url => submit_registration_path do %>
    <div class="reg_form_quadrant">
      <div class="bordered inline">
        <%= label :registration, :minimum_price, 'Price Range:' %><br>
        <%= select :registration, :minimum_price, price_range_options, :include_blank => 'Minimum' %>
        <%= select :registration, :maximum_price, price_range_options, :include_blank => 'Maximum' %>
      </div>
      <div class="bordered inline">
        <%= label :registration, :size, 'Size:' %><br>
        <%= select :registration, :size, size_options, :include_blank => '[Minimum]' %>
      </div>
    </div>
  
    <div class="reg_form_quadrant">
      <div class="bordered">
        <div class="inline">
          <div>
            <%= text_field :client, :first_name, :placeholder => 'First Name', :class => 'name_part' %>
            <%= text_field :client, :last_name, :placeholder => 'Last Name', :class => 'name_part' %>
            <%= text_field :client, :date_of_birth, :placeholder => 'Birthdate', :class => 'datepicker birthdate' %>
          </div>
          <div>
            <%= text_field :lease, :apartment_number, :placeholder => 'Apt', :class => 'address_part' %>
            <%= text_field :lease, :street_number, :placeholder => '#', :class => 'address_part' %>
            <%= text_field :lease, :street_name, :placeholder => 'Street', :class => 'street' %>
            <%= text_field :lease, :zip_code, :placeholder => 'Zip', :class => 'zip' %>
          </div>
          <div>
            <%= text_field :landlord, :name, :placeholder => 'Landlord' %>
          </div>
        </div>
        <div class="inline">
          <div>
            <%= text_field :home_phone, :number, :placeholder => 'Home Phone' %>
          </div>
          <div>
            <%= text_field :cell_phone, :number, :placeholder => 'Cell Phone' %>
          </div>
          <div>
            <%= text_field :email, :address, :placeholder => 'Email' %>
          </div>
        </div>
      </div>

      <div class="bordered">
        <div class="inline">
          <div>
            <%= text_field :employer, :name, :placeholder => 'Employer' %>
          </div>
          <div>
            <%= text_field :industry, :name, :placeholder => 'Industry' %>
          </div>
          <div>
            <%= text_field :employer, :address, :placeholder => 'Address' %>
          </div>
          <div>
            <%= text_field :employment, :position, :placeholder => 'Position' %>
          </div>
        </div>
        <div class="inline">
          <div>
            <%= text_field :office_phone, :number, :placeholder => 'Office Phone' %>
          </div>
          <div>
            <%= text_field :office_fax, :number, :placeholder => 'Office Fax' %>
          </div>
          <div>
            <%= text_field :employment, :income, :placeholder => 'Annual Income' %>
          </div>
          <div>
            <%= text_field :registrant, :other_fund_sources, :placeholder => 'Other Funds/Source' %>
          </div>
        </div>
      </div>
      <div class="bordered">
        <div class="inline">
          <%= text_area :registration, :reason_for_moving, :placeholder => 'Reason For Moving' %>
        </div>
        <div class="inline">
          <div>
            <%= select :registration, :referral_source_id, referral_source_options, :include_blank => 'How did you hear about us?' %>
          </div>
          <div>
            <%= label :registration, :move_by, 'I must move by:' %>
            <%= date_select :registration, :move_by, :order => [:month, :day, :year] %>
          </div>
        </div>
      </div>
      <div class="bordered">
        <%= text_field :registration, :occupants, :placeholder => 'Number of Occupants' %>
      </div>
      <div class="bordered">
        <%= text_field :registration, :pets, :placeholder => 'Type and Size of Any Pets' %>
      </div>
    </div>

    <p>Roommates:</p>
    <div class="reg_form_quadrant">
      <div class="bordered inline">
        <div>
          <%= text_field :roommate_1_client, :first_name, :placeholder => 'First Name', :class => 'name_part' %>
          <%= text_field :roommate_1_client, :last_name, :placeholder => 'Last Name', :class => 'name_part' %>
        </div>
        <div>
          <%= text_field :roommate_1_cell_phone, :number, :placeholder => 'Cell Phone Number' %>
        </div>
        <div>
          <%= text_field :roommate_1_employer, :name, :placeholder => 'Employer' %>
        </div>
        <div>
          <%= text_field :roommate_1_employment, :income, :placeholder => 'Approximate Annual Income' %>
        </div>
        <div>
          <%= text_field :roommate_1_registrant, :other_fund_sources, :placeholder => 'Other Funds/Source' %>
        </div>
      </div>
      <div class="bordered inline">
        <div>
          <%= text_field :roommate_2_client, :first_name, :placeholder => 'First Name', :class => 'name_part' %>
          <%= text_field :roommate_2_client, :last_name, :placeholder => 'Last Name', :class => 'name_part' %>
        </div>
        <div>
          <%= text_field :roommate_2_cell_phone, :number, :placeholder => 'Cell Phone Number' %>
        </div>
        <div>
          <%= text_field :roommate_2_employer, :name, :placeholder => 'Employer' %>
        </div>
        <div>
          <%= text_field :roommate_2_employment, :income, :placeholder => 'Approximate Annual Income' %>
        </div>
        <div>
          <%= text_field :roommate_2_registrant, :other_fund_sources, :placeholder => 'Other Funds/Source' %>
        </div>
      </div>
      <div class="bordered inline">
        <div>
          <%= text_field :roommate_3_client, :first_name, :placeholder => 'First Name', :class => 'name_part' %>
          <%= text_field :roommate_3_client, :last_name, :placeholder => 'Last Name', :class => 'name_part' %>
        </div>
        <div>
          <%= text_field :roommate_3_cell_phone, :number, :placeholder => 'Cell Phone Number' %>
        </div>
        <div>
          <%= text_field :roommate_3_employer, :name, :placeholder => 'Employer' %>
        </div>
        <div>
          <%= text_field :roommate_3_employment, :income, :placeholder => 'Approximate Annual Income' %>
        </div>
        <div>
          <%= text_field :roommate_3_registrant, :other_fund_sources, :placeholder => 'Other Funds/Source' %>
        </div>
      </div>
    </div>
  
    <p>
      What apartments have you seen prior to visiting us?  Are there any apartments you are currently considering?
    </p>
    <div class="reg_form_quadrant">
      <div class="bordered">
        <div class="inline">
          <%= text_field :apartment_1, :unit_number, :placeholder => 'Apt', :class => 'address_part' %>
          <%= text_field :apartment_1, :street_number, :placeholder => '#', :class => 'address_part' %>
          <%= text_field :apartment_1, :street_name, :placeholder => 'Street', :class => 'street' %>
          <%= text_field :apartment_1, :zip_code, :placeholder => 'Zip', :class => 'zip' %>
        </div>
        <div class="inline">
          <%= text_field :apartment_1, :size, :placeholder => 'Size', :class => 'medium' %>
        </div>
        <div class="inline">
          <%= text_field :apartment_1, :rent, :placeholder => 'Rent', :class => 'medium' %>
        </div>
        <div class="inline">
          <%= text_field :apartment_1, :comment, :placeholder => 'Comment' %>
        </div>
      </div>
      <div class="bordered">
        <div class="inline">
          <%= text_field :apartment_2, :unit_number, :placeholder => 'Apt', :class => 'address_part' %>
          <%= text_field :apartment_2, :street_number, :placeholder => '#', :class => 'address_part' %>
          <%= text_field :apartment_2, :street_name, :placeholder => 'Street', :class => 'street' %>
          <%= text_field :apartment_2, :zip_code, :placeholder => 'Zip', :class => 'zip' %>
        </div>
        <div class="inline">
          <%= text_field :apartment_2, :size, :placeholder => 'Size', :class => 'medium' %>
        </div>
        <div class="inline">
          <%= text_field :apartment_2, :rent, :placeholder => 'Rent', :class => 'medium' %>
        </div>
        <div class="inline">
          <%= text_field :apartment_2, :comment, :placeholder => 'Comment' %>
        </div>
      </div>
    </div>
    <%= submit_tag 'Submit & Go to Next Page' %>
  <% end %>
</div>
