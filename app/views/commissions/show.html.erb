<div class="tools">
  <%= link_to 'Print', commission_path(@commission, :format => :pdf) %> |
  <%= link_to 'Edit', edit_commission_path(@commission) %> |
  <%= link_to 'Back', commissions_path %>
</div>


<div id="commission_data_status">
  <a title="<%= @commission.located_title %>" class="commission_status <%= @commission.located? ? 'satisfied' : 'unsatisfied' %>">located?</a>
  <a title="<%= @commission.populated_title %>" class="commission_status <%= @commission.populated? ? 'satisfied' : 'unsatisfied' %>">populated?</a>
  <a title="<%= @commission.known_title %>" class="commission_status <%= @commission.known? ? 'satisfied' : 'unsatisfied' %>">known?</a>
  <a title="<%= @commission.owned_title %>" class="commission_status <%= @commission.owned? ? 'satisfied' : 'unsatisfied' %>">owned?</a>
  <a title="<%= @commission.dealt_title %>" class="commission_status <%= @commission.dealt? ? 'satisfied' : 'unsatisfied' %>">dealt?</a>
  <a title="<%= @commission.broke_title %>" class="commission_status <%= @commission.broke? ? 'satisfied' : 'unsatisfied' %>">broke?</a>
  <a title="<%= @commission.referred_title %>" class="commission_status <%= @commission.referred? ? 'satisfied' : 'unsatisfied' %> optional">referred?</a>
  <a title="<%= @commission.cut_title %>" class="commission_status <%= @commission.cut? ? 'satisfied' : 'unsatisfied' %>">cut?</a>
  <a title="<%= @commission.detailed_title %>" class="commission_status <%= @commission.detailed? ? 'satisfied' : 'unsatisfied' %>">detailed?</a>
</div>


<div class="commission_vitals">
  <div id="lessees">
    Tenants: <%= @commission.tenant_name.to_sentence %>
  </div>
  
  <div id="location">
    <%= @commission.property_address %> <%= @commission.apartment_number %><br>
    <%= @commission.zip_code %>
  </div>
  <hr>
  <%= clearboth %>
  
  <div id="lease_basics">
    <%= number_to_round_currency @commission.leased_monthly_rent %><br>
    <%= @commission.lease_start_date.strftime("%-m/%-d/%Y") %>-<%= @commission.lease_term %>
  </div>
  
  <div id="property_description">
    <%= @commission.new_development ? 'new development' : '' %> <%= rounded @commission.square_footage %> sq ft <%= @commission.property_type %> with <%= pluralize rounded(@commission.bedrooms), 'bedroom' %>
  </div>
  
  <div id="commission_navigation">
    Landlord: <%= link_to_name @commission.landlord %><br>
    <%= link_to_name @commission.deal, :reference %><br>
  </div>
</div>

<div class="commission_financials">
  <span>lease_sign_date:</span><%= @commission.lease_sign_date.strftime("%-m/%-d/%Y") %><br>
  <span>approval_date:</span><%= @commission.approval_date.strftime("%-m/%-d/%Y") %><br>
  <span>request_date:</span><%= @commission.request_date.strftime("%-m/%-d/%Y") %><br>

  <span>annualized_rent:</span><%= @commission.annualized_rent %><br>

  <span>owner pay commission:</span><%= number_to_round_currency @commission.owner_pay_commission %><br>
  <span>listing side commission:</span><%= number_to_round_currency @commission.listing_side_commission %><br>
  <span>tenant side commission:</span><%= number_to_round_currency @commission.tenant_side_commission %><br>

  <span>co-broke commission:</span><%= number_to_round_currency @commission.co_broke_commission %><br>
  <span>Citi commission:</span><%= number_to_round_currency @commission.citi_commission %><br>
  <span>total commission:</span><%= number_to_round_currency @commission.total_commission %><br>
  <span>commission fee %:</span><%= rounded @commission.commission_fee_percentage %><br>

  <span>agent_split_percentage:</span><%= rounded @commission.agent_split_percentage %><br>
</div>
<%= link_to 'Print', commission_path(@commission, :format => :pdf) %> |
<%= link_to 'Edit', edit_commission_path(@commission) %> |
<%= link_to 'Back', commissions_path %>
