<p id="notice"><%= notice %></p>

<h1>Referral Sources</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Registrations</th>
      <th>Clients</th>
      <th>Landlords</th>
      <th>Leases</th>
      <th>Industries</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referral_sources.each do |referral_source| %>
      <tr>
        <td><%= referral_source.name %></td>
        <td><%= link_to_associated referral_source, :registrations %></td>
        <td><%= link_to_associated referral_source, :clients %></td>
        <td><%= link_to_associated referral_source, :landlords %></td>
        <td><%= link_to_associated referral_source, :leases %></td>
        <td><%= link_to_associated referral_source, :industries %></td>
        <td><%= referral_source.active %></td>
        <td><%= link_to 'Show', referral_source %></td>
        <td><%= link_to fa_icon(:highlighter), edit_referral_source_path(referral_source), :title => 'Edit' %></td>
        <td><%= link_to 'Destroy', referral_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @referral_sources %>
<br>

<%= link_to 'New Referral Source', new_referral_source_path %>
