<p id="notice"><%= notice %></p>

<h1>Employments</h1>

<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>Income</th>
      <th>Start date</th>
      <th>Client</th>
      <th>Employer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employments.each do |employment| %>
      <tr>
        <td><%= employment.position %></td>
        <td><%= number_to_round_currency employment.income %></td>
        <td><%= employment.start_date %></td>
        <td><%= link_to_name_with_icon employment.client %></td>
        <td><%= link_to_name_with_icon employment.employer %></td>
        <td><%= link_to 'Show', employment %></td>
        <td><%= link_to fa_icon(:highlighter), edit_employment_path(employment), :title => 'Edit' %></td>
        <td><%= link_to fa_icon(:backspace), employment, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @employments %>
<br>

<%= link_to 'New Employment', new_employment_path %>
