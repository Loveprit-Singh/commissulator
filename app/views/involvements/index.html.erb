<p id="notice"><%= notice %></p>

<h1>Involvements</h1>

<table>
  <thead>
    <tr>
      <th>Package</th>
      <th>Role</th>
      <th>Rate</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @involvements.each do |involvement| %>
      <tr>
        <td><%= link_to_name_with_icon involvement.package %></td>
        <td><%= link_to_name_with_icon involvement.role %></td>
        <td><%= involvement.rate %></td>
        <td><%= involvement.description %></td>
        <td><%= link_to 'Show', involvement %></td>
        <td><%= link_to 'Edit', edit_involvement_path(involvement) %></td>
        <td><%= link_to 'Destroy', involvement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

