<p id="notice"><%= notice %></p>

<h1>Niches</h1>

<table>
  <thead>
    <tr>
      <th>Employer</th>
      <th>Industry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @niches.each do |niche| %>
      <tr>
        <td><%= link_to_name_with_icon niche.employer %></td>
        <td><%= link_to_name_with_icon niche.industry %></td>
        <td><%= link_to 'Show', niche %></td>
        <td><%= link_to fa_icon(:highlighter), edit_niche_path(niche), :title => 'Edit' %></td>
        <td><%= link_to fa_icon(:backspace), niche, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @niches %>
<br>

<%= link_to 'New Niche', new_niche_path %>
