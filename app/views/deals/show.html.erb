<%= link_to '[edit]', edit_deal_path(@deal) %>
<p>
  <strong>Name:</strong>
  <%= @deal.name %>
</p>

<p>
  <strong>Commission:</strong>
  <%= number_to_currency @deal.commission %>
</p>

<p>
  <strong>Address:</strong>
  <%= @deal.address %>
</p>

<p>
  <strong>Unit number:</strong>
  <%= @deal.unit_number %>
</p>

<p>
  <strong>Status:</strong>
  <%= @deal.status %>
</p>

<table>
  <% @deal.subcommissions.each do |roleplay, payout| %>
    <tr>
      <td><%= roleplay %></td>
      <td><%= number_to_currency payout %></td>
    </tr>
  <% end %>
</table>
<%= participant_adder @deal %>
