<header>Documents</header>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <%= document_row_for document %>
    <% end %>
  </tbody>
</table>
<%= paginate @documents %>
<br>

<%= link_to fa_icon(:file_signature, :size => '2x'), new_document_path(:document => {:avatar_id => current_avatar}), :title => 'Upload Document' %>
