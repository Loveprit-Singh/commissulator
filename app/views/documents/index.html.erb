<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.role %></td>
        <td><%= link_to 'View', document.capture %></td>
        <td><%= link_to 'Download', rails_blob_path(document.capture, disposition: "attachment") %>
        <td><%= link_to 'Details', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @documents %>
<br>

<%= link_to 'New Document', new_document_path(:document => {:agent_id => current_agent}) %>
