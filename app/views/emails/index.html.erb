<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>Variety</th>
      <th>Address</th>
      <th>Client</th>
      <th>Employer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.variety %></td>
        <td><%= email.address %></td>
        <td><%= link_to_name_with_icon email.client %></td>
        <td><%= link_to_name_with_icon email.employer %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @emails %>
<br>

<%= link_to 'New Email', new_email_path %>
