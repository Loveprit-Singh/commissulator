<p id="notice"><%= notice %></p>

<h1>Industries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Employers</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @industries.each do |industry| %>
      <tr>
        <td><%= industry.name %></td>
        <td><%= link_to_associated industry, :employers %></td>
        <td><%= link_to_associated industry, :employments %></td>
        <td><%= link_to_associated industry, :emails %></td>
        <td><%= link_to_associated industry, :phones %></td>
        <td><%= link_to_associated industry, :social_accounts %></td>
        <td><%= link_to 'Show', industry %></td>
        <td><%= link_to 'Edit', edit_industry_path(industry) %></td>
        <td><%= link_to 'Destroy', industry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

