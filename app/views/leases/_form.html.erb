      <h2><%= pluralize(lease.errors.count, "error") %> prohibited this lease from being saved:</h2>

      <ul>
      <% lease.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :apartment_number %>
    <%= form.text_field :apartment_number %>
  </div>

  <div class="field">
    <%= form.label :street_number %>
    <%= form.text_field :street_number %>
  </div>

  <div class="field">
    <%= form.label :street_name %>
    <%= form.text_field :street_name %>
  </div>

  <div class="field">
    <%= form.label :zip_code %>
    <%= form.text_field :zip_code %>
  </div>

  <div class="field">
    <%= form.label :landlord_id %>
    <%= form.select :landlord_id, options_from_collection_for_select(Landlord.all, :id, :name, lease.landlord_id), :include_blank => true %>
  </div>

  <div class="field">
    <%= form.label :client_id %>
    <%= form.select :client_id, options_from_collection_for_select(Client.all, :id, :name, lease.client_id), :include_blank => true %>
  </div>

  <div class="field">
    <%= form.label :registration_id %>
    <%= form.select :registration_id, options_from_collection_for_select(Registration.all, :id, :name, lease.registration_id), :include_blank => true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
