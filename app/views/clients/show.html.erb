<p>
  <strong>First name:</strong>
  <%= @client.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @client.last_name %>
</p>

<p>
  <strong>Date of birth:</strong>
  <%= @client.date_of_birth %>
</p>

<%= div_for @client do %>
  <% @client.employments.each do |employment| %>
    <%= div_for employment do %>
      <%= employment.name %>
      <%= link_to_name employment.employer %>
    <% end %>
  <% end %>

  <% @client.apartments.each do |apartment| %>
    <%= div_for apartment do %>
      <%= apartment.name %>
    <% end %>
  <% end %>

  <% @client.emails.each do |email| %>
    <%= div_for email do %>
      <%= link_to_name email, :address %>
    <% end %>
  <% end %>
  
  <% @client.phones.each do |phone| %>
    <%= div_for phone do %>
      <%= link_to_name phone, :number %>
    <% end %>
  <% end %>
  
  <% @client.social_accounts.each do |social_account| %>
    <%= div_for social_account do %>
      <%= link_to_name social_account, :moniker %>
    <% end %>
  <% end %>
<% end %>

<%= link_to fa_icon(:highlighter), edit_client_path(@client), :title => 'Edit' %>
