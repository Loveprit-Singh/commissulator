<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Unit number</th>
      <th>Street number</th>
      <th>Street name</th>
      <th>Zip code</th>
      <th>Size</th>
      <th>Rent</th>
      <th>Comment</th>
      <th>Registration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.unit_number %></td>
        <td><%= apartment.street_number %></td>
        <td><%= apartment.street_name %></td>
        <td><%= apartment.zip_code %></td>
        <td><%= apartment.size %></td>
        <td><%= number_to_round_currency apartment.rent %></td>
        <td><%= apartment.comment %></td>
        <td><%= link_to_name_with_icon apartment.registration %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to fa_icon(:highlighter), edit_apartment_path(apartment), :title => 'Edit' %></td>
        <td><%= link_to fa_icon(:backspace), apartment, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @apartments %>
<br>

<%= link_to 'New Apartment', new_apartment_path %>
