<h1>Participants</h1>
<header>These objects track who played a role in each deal.</header>

<table>
  <thead>
    <tr>
      <th>Deal</th>
      <th>Assistant</th>
      <th>Payout</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= link_to_name participant.deal %></td>
        <td><%= link_to_name participant.assistant %></td>
        <td><%= number_to_currency participant.payout %></td>
        <td><%= participant.role %></td>
        <td><%= participant.status %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Participant', new_participant_path %>
