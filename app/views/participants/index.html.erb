<h1>Participants</h1>
<header>These objects track who played a role in each deal.</header>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Deal', :sort => 'deal_id', :filtered_attribute => params[:filtered_attribute], :filter_value => params[:filter_value] %></th>
      <th><%= link_to 'Assistant', :sort => 'assistant_id', :filtered_attribute => params[:filtered_attribute], :filter_value => params[:filter_value] %></th>
      <th><%= link_to 'Payout', :sort => 'payout', :filtered_attribute => params[:filtered_attribute], :filter_value => params[:filter_value] %></th>
      <th>Role</th>
      <th>Status</th>
      <th><%= link_to 'Updated', :sort => 'updated_at', :filtered_attribute => params[:filtered_attribute], :filter_value => params[:filter_value] %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= link_to_name participant.deal, :reference %></td>
        <td><%= link_to_name participant.assistant %></td>
        <td><%= number_to_currency participant.payout %></td>
        <td><%= participation_in participant.role %></td>
        <td><%= participant.status %></td>
        <td><%= participant.updated_at.to_s :descriptive %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @participants %>

<br>

<div class="tools">
  <%= link_to 'New Participant', new_participant_path %>
</div>
