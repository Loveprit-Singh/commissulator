<h1>Assistants</h1>
<header>These are the people who work on deals.  To be credited, a person must be listed here (even if they are also a senior agent).</header>

<table>
  <thead>
    <tr>
      <th><%= link_to 'First name', :sort => 'first_name' %></th>
      <th><%= link_to 'Last name', :sort => 'last_name' %></th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assistants.each do |assistant| %>
      <tr>
        <td><%= assistant.first_name %></td>
        <td><%= assistant.last_name %></td>
        <td><%= assistant.phone_number %></td>
        <td><%= assistant.email %></td>
        <td><%= assistant.status %></td>
        <td><%= link_to 'Show', assistant %></td>
        <td><%= link_to 'Edit', edit_assistant_path(assistant) %></td>
        <td><%= activation_of assistant %></td>
        <td><%= link_to 'Delete', assistant, :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @assistants %>
<br>
<div class="tools">
  <%= link_to 'New Assistant', new_assistant_path %>
</div>
