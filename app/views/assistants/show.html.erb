<%= link_to '[edit]', edit_assistant_path(@assistant) %>

<p>
  <strong>First name:</strong>
  <%= @assistant.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @assistant.last_name %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @assistant.phone_number %>
</p>

<p>
  <strong>Email:</strong>
  <%= @assistant.email %>
</p>

<p>
  <strong>Status:</strong>
  <%= @assistant.status %>
</p>

<table>
  <% @assistant.assists.each do |assist| %>
    <tr>
      <td><%= link_to_name assist %></td>
      <td><%= link_to_name assist.deal, :reference %></td>
      <td><%= link_to 'Paperwork', assist.commission if assist.commission %>
      <td><%= number_to_currency assist.payout if current_agent.admin? %></td>
    </tr>
  <% end %>
</table>
